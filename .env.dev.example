# PostgreSQL Database Configuration
POSTGRES_USER=szuloradar
POSTGRES_PASSWORD=szuloradar_password
POSTGRES_DB=szuloradar
POSTGRES_PORT=5432

# Database URL (constructed from above variables)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://szuloradar:szuloradar_password@db:5432/szuloradar

# Backend Configuration
BACKEND_PORT=8000

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]

# Frontend Configuration
FRONTEND_PORT=3000

NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Development Data Loading
# Set to true to automatically load development data (places) from dev_data/places.json on startup
LOAD_DEV_DATA=true
