# ============================================
# SzülőRadar Backend - Development Docker Compose Environment
# ============================================
# This file is specifically for docker-compose.dev.yml
# Copy to .env and docker-compose will automatically use it
# cp .env.dev.example .env

# ============================================
# Database Configuration
# ============================================
# Database connection for docker-compose (uses service name 'db' as host)
DATABASE_URL=postgresql://szuloradar:szuloradar_password@db:5432/szuloradar

# ============================================
# JWT Configuration
# ============================================
# Development secret key (change for production!)
SECRET_KEY=d5L3PkS6RNt9O1jJ

# JWT algorithm
ALGORITHM=HS256

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Application Settings
# ============================================
# Enable debug mode for development
DEBUG=True

# CORS origins - add your frontend URLs here
# Format: JSON array of strings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]

# ============================================
# PostgreSQL Container Settings (optional overrides)
# ============================================
# These match the defaults in docker-compose.dev.yml
# Uncomment and modify if you want different values
# POSTGRES_USER=szuloradar
# POSTGRES_PASSWORD=szuloradar_password
# POSTGRES_DB=szuloradar
